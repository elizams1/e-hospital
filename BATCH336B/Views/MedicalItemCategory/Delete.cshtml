@model int
@{
    Layout = null;
}
<div class="card">
    <div class="card-body">
        <i class="fas fa-exclamation-triangle float-xxl-start text-danger"></i>
        <span>Anda yakin ingin menghapus kategori produk kesehatan ini?</span>
    </div>
    <div class="card-footer">
        <button class="btn btn-danger" id="btnDeleteCat"> Confirm </button>
        <button class="btn btn-secondary" data-bs-dismiss="modal" aria-label="Close"> Cancel </button>
    </div>
</div>

<script>
    $("#staticModalLgLabel").html("@ViewBag.Title");

    $("#btnDeleteCat").click(() => {
        $.ajax({
            url: '/MedicalItemCategory/Delete',
            type: 'post',
            data: { "id": @Model, "userId": 3 },
            dataType: 'json',
            beforeSend: function () { },
            success: function (response) {
                if (response.statusCode == 200) {
                    location.reload();
                } else {
                    alert(response.message);
                }
            },
            error: function (errResponse) {
                debugger;
            }

        })
    })
</script>