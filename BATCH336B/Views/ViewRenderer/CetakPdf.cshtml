@model VMMHistoryCustomer?
@{

    DateTime mydate = (DateTime)Model.Customer.Dob;
    DateTime mydate2 = DateTime.Now;
    TimeSpan selisih = mydate2 - mydate;
    double umur = Convert.ToInt32(selisih.TotalDays) / 365.5;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .text-italic {
            font-style: italic;
            font-size: 12px;
        }

        .custom-label {
            display: inline-block;
            padding: 10px;
            background-color: green; /* Warna latar hijau */
            color: #ffffff; /* Warna teks putih */
            border-radius: 5px; /* Sudut melengkung */
        }

        .c-margin-end {
            margin-right: 50px;
        }

        .c-margin-top {
            margin-top: 40px;
        }

        .c-margin-top2 {
            margin-top: 10px;
        }
        .c-text-size {
            font-size: 12px;
        }

        .garis-horizontal {
            width: 100%;
            margin: 20px auto;
            border: 1px solid #000; /* Pilih warna garis sesuai kebutuhan */
        }


    </style>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BATCH336B</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>

<body>
    <div class="card p-4">
        <div class="text-center text-success text-bold h4">
            Resep Digital
        </div>
        <div class="text-center mb-2 text-italic custom-label">
            Resep digital akan tidak berlaku mulai tanggal  @((Model.Appointment.AppointmentDate + TimeSpan.FromDays(2))?.ToString("dd MMMM yyyy"))
        </div>
        <div class="d-flex justify-content-between mb-2">
            <div>
                <div class="text-success text-bold h6">
                    <b>@Model.BiodatumDoctor.Fullname</b>
                </div>
                <div class="text-success h6">
                    @Model.DoctorOffice.Specialization
                </div>
                <div class="text-success h6">
                    @Model.Appointment.AppointmentDate?.ToString("dd MMMM yyyy"), @Model.MedicalFacility.Name
                </div>
            </div>
            <div class="c-margin-end c-margin-top2">
                <h3 class="text-success">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-hospital" viewBox="0 0 16 16">
                        <path d="M8.5 5.034v1.1l.953-.55.5.867L9 7l.953.55-.5.866-.953-.55v1.1h-1v-1.1l-.953.55-.5-.866L7 7l-.953-.55.5-.866.953.55v-1.1zM13.25 9a.25.25 0 0 0-.25.25v.5c0 .138.112.25.25.25h.5a.25.25 0 0 0 .25-.25v-.5a.25.25 0 0 0-.25-.25zM13 11.25a.25.25 0 0 1 .25-.25h.5a.25.25 0 0 1 .25.25v.5a.25.25 0 0 1-.25.25h-.5a.25.25 0 0 1-.25-.25zm.25 1.75a.25.25 0 0 0-.25.25v.5c0 .138.112.25.25.25h.5a.25.25 0 0 0 .25-.25v-.5a.25.25 0 0 0-.25-.25zm-11-4a.25.25 0 0 0-.25.25v.5c0 .138.112.25.25.25h.5A.25.25 0 0 0 3 9.75v-.5A.25.25 0 0 0 2.75 9zm0 2a.25.25 0 0 0-.25.25v.5c0 .138.112.25.25.25h.5a.25.25 0 0 0 .25-.25v-.5a.25.25 0 0 0-.25-.25zM2 13.25a.25.25 0 0 1 .25-.25h.5a.25.25 0 0 1 .25.25v.5a.25.25 0 0 1-.25.25h-.5a.25.25 0 0 1-.25-.25z" />
                        <path d="M5 1a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v1a1 1 0 0 1 1 1v4h3a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V8a1 1 0 0 1 1-1h3V3a1 1 0 0 1 1-1zm2 14h2v-3H7zm3 0h1V3H5v12h1v-3a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1zm0-14H6v1h4zm2 7v7h3V8zm-8 7V8H1v7z" />
                    </svg>
                    Healthy

                </h3>
            </div>
        </div>
        <hr class="garis-horizontal">
        <div class="mt-2 mb-2">
            <div class="text-success h6">
                Nama Pasien :
            </div>
            <div class="text-success text-bold h6">
                <b>@Model.Biodatum.Fullname</b>
            </div>
            <div class="text-success h6 mb-2">
                @(Model.Customer.Gender == "L" ? "Laki-laki" : "Perempuan"), @((int)umur) tahun
            </div>
            <div class="c-margin-top2 text-center text-success c-text-size">
                Silahkan menghubungi fakses terdekat jika tidak ada perbaikan
            </div>
        </div>
        <hr class="garis-horizontal">
        @foreach (VMTPrescription resepDigital in Model.Prescription)
        {
            <div class="mb-2 p-3">
                <div class="text-success h6">
                    <b> @resepDigital.MedicalItemName</b>
                </div>
                <div class="text-success h6">
                    @resepDigital.Dosage (@resepDigital.Directions)
                </div>
                <div class="text-success h6">
                    Waktu : @resepDigital.Time
                </div>
            </div>
            <hr class="garis-horizontal">

        }
    </div>
</body>


