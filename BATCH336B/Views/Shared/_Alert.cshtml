            $("#alertCekLogin").slideUp("slow");
            $(".alert").addClass("d-none");
        }, 3000);
    }

    $(document).ready(function () {
        if ("@ViewBag.InfoMsg" != "") alert("@Html.Raw(ViewBag.InfoMsg)", "info");
        if ("@ViewBag.WarningMsg" != "") alert("@Html.Raw(ViewBag.WarningMsg)", "warning");
        if ("@ViewBag.ErrorMsg" != "") alert("@Html.Raw(ViewBag.ErrorMsg)", "danger");
        if ("@ViewBag.SuccessMsg" != "") alert("@Html.Raw(ViewBag.SuccessMsg)", "success");
    });
    
</script>