@{
    //Get Alert Message from Session
    ViewBag.InfoMsg = Context.Session.GetString("infoMsg") ?? "";
    ViewBag.WarningMsg = Context.Session.GetString("warningMsg") ?? "";
    ViewBag.ErrorMsg = Context.Session.GetString("errorMsg") ?? "";
    ViewBag.SuccessMsg = Context.Session.GetString("successMsg") ?? "";

    //Resert Session
    Context.Session.SetString("infoMsg", "");
    Context.Session.SetString("warningMsg", "");
    Context.Session.SetString("errorMsg", "");
    Context.Session.SetString("successMsg", "");
}

<div id="alertPlaceholder"></div>

<script>
    function alert(message, color) {
        $("#alertPlaceholder").show();
        $("#alertPlaceholder").append(`
            <div class="alert alert-${color} alert-dismissible fade show" role="alert">
                <i class="fa-solid fa-circle-info text-${color}"></i>
                <span>${message} </span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        `);
        setTimeout(() => { 
            $("#alertPlaceholder").slideUp("slow");
            $(".alert").addClass("d-none");
        }, 5000);
    }
    function alertRegist(message, color) {
