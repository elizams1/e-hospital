@model VMMHistoryCustomer?
@{
    Layout = null;
}
<head>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<div class="text-center">
    <div>
        Resep digital hanya berlaku selama 2 x 24 jam
    </div>
    <div class="mb-4">
        setelah resep diberikan
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn btn-outline-success me-2 w-25" data-bs-dismiss="modal" aria-label="Close">Batal</button>
        <a id="cetak" class="btn btn-success ms-2 w-25" asp-controller="ViewRenderer" asp-action="CetakPdf" asp-route-id="@Model.Appointment.Id">Cetak</a>
    </div>
</div>

<script>
    $("#staticModalLabel").html("@ViewBag.Title");

    $("#cetak").click(function (e) {

        setTimeout(function () {
            Swal.fire(
                'Success!',
                'Cetak Pdf Success!',
                'success'
            ),
            $('#staticModal').modal('hide');
            location.reload();
        }, 2000);

    })
</script>